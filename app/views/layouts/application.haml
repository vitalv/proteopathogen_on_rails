!!! Strict 
/Compiled to <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %meta{'http-equiv' => "Content-type", :content => "text/html", :charset => "utf-8" }
    %meta{:name => "keywords", :content => "proteomics Candida albicans host pathogen" }

    %link{:rel => "icon", :href => "/images/g3360.png"}
    %title Proteopathogen


  =stylesheet_link_tag 'style'
  /=javascript_include_tag :defaults

  %body
    %div.wrapper
    
      %header
        =image_tag 'proteopathogen_logo.png'

      %nav_links
        %ul
          %li=link_to 'HOME', '/'
          %li=link_to 'BROWSE', '/browsexperiment'
          %li=link_to 'SEARCH', '/search'
          %li=link_to 'CONTACT', '/contact'
          - if current_user
            %li="logged in as #{current_user.email}"
            %li= link_to 'log out', log_out_path
          - else
            %li=link_to 'log in', log_in_path
             
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      %content

        =yield
        
        - if current_user
          =link_to "Experiments", :experiments
          =link_to "MzidFiles", :mzid_files
          =link_to 'SpectraData', :spectra_acquisition_runs
          =link_to "LoadMzid2DB"
      
      %div.push
      
    %div.footer
      =image_tag 'proteopathogen_logo.png'
      

    


